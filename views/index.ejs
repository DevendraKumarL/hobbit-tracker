<!DOCTYPE html>
<html>
<head>

	<title>𒊯 Hobbit Tracker 𒊯</title>
	<link rel="icon" href="images/combo-chart-icon.png">

	<!-- load clarity icons lib -->
	<link rel="stylesheet" type="text/css" href="clricons/clr-icons.min.css">
	<script src="webcomponents/custom-elements.min.js"></script>
	<script src="clricons/clr-icons.min.js"></script>

	<!-- load clarity.js ui lib -->
	<link rel="stylesheet" type="text/css" href="clrui/clr-ui-dark.min.css">

	<!-- load chart.js lib -->
	<script src="chartjs/Chart.js"></script>

	<!-- load chart.js plugin datalabels plugin -->
	<script src="chartjsplugin/chartjs-plugin-datalabels.min.js"></script>

</head>
<body>
	<div class="main-container">
		<div class="alert alert-app-level"></div>
		<header class="header header-6">
			<div class="branding">
				<a href="/" class="nav-link">
					<span class="title">𒊯 <span>Hobbit</span> 𒊯</span>
				</a>
			</div>
		</header>
		<div class="content-container">
			<div class="content-area">
				<section id="gridPanel" role="tabpanel" aria-labelledby="grid">
					<div class="clr-col-12" id="datagridCard">
						<div class="card">
							<div class="card-block">
								<div class="card-title">
									⥈ Hobbit Datagrid ⥈
								</div>
								<div class="card-text">
									<div id="mygrid"></div>
									<div id="legendgrid"></div>
								</div>
							</div>
						</div>
					</div>
				</section>
				<section id="barChartPanel" role="tabpanel" aria-labelledby="barchart" aria-hidden="true">
					<div class="clr-col-12">
						<div class="card">
							<div class="card-block">
								<div class="card-title">
									⥉ Hobbit Data Bar Chart ⥉ &nbsp;&nbsp;&nbsp;
									<div class="clr-form-control" id="toggle-container">
										<div class="clr-control-container">
										<div class="clr-toggle-wrapper">
											<input type="checkbox" id="toggle1" name="toggle-basic" value="option1" class="clr-toggle" onchange="appIns.toggleSwitchBarChart()">
											<label for="toggle1">Detailed</label>
										</div>
										</div>
									</div>
								</div>
								<div class="card-text">
									<canvas id="barchartCanvas"></canvas>
									<canvas id="barchart2Canvas"></canvas>
								</div>
							</div>
						</div>
					</div>
				</section>
				<section id="lineChartPanel" role="tabpanel" aria-labelledby="linechart" aria-hidden="true">
					<div class="clr-col-12">
						<div class="card">
							<div class="card-block">
								<div class="card-title">
									⏀ Hobbit Data Line Chart ⏀
								</div>
								<div class="card-text">
									<canvas id="linechartCanvas"></canvas>
								</div>
							</div>
						</div>
					</div>
				</section>
				<section id="indieChartsPanel" role="tabpanel" aria-labelledby="barchart" aria-hidden="true">
				</section>
			</div>
			<nav class="sidenav">
				<div class="tabs-vertical">
					<ul class="nav" role="tablist" id="tabs">
						<li role="presentation" class="nav-item">
							<button id="grid" class="btn btn-link nav-link active"
								aria-controls="gridPanel" aria-selected="true"
								type="button" onclick="appIns.switchTab('grid')">
								<clr-icon shape="grid-view"></clr-icon> Grid</button>
						</li>
						<li role="presentation" class="nav-item">
							<button id="barchart" class="btn btn-link nav-link"
								aria-controls="barChartPanel" aria-selected="false"
								type="button" onclick="appIns.switchTab('barchart')">
								<clr-icon shape="bar-chart"></clr-icon> Bar Chart</button>
						</li>
						<li role="presentation" class="nav-item">
							<button id="linechart" class="btn btn-link nav-link"
								aria-controls="lineChartPanel" aria-selected="false"
								type="button" onclick="appIns.switchTab('linechart')">
								<clr-icon shape="line-chart"></clr-icon> Line Chart</button>
						</li>
						<li role="presentation" class="nav-item">
							<button id="indiecharts" class="btn btn-link nav-link"
								aria-controls="indieChartsPanel" aria-selected="false"
								type="button" onclick="appIns.switchTab('indiecharts')">
								<clr-icon shape="view-columns"></clr-icon> Indie Charts</button>
						</li>
					</ul>
				</div>
			</nav>
		</div>
	</div>
</body>
<div class="clr-col-6" id="ichartTemplateCard">
	<div class="card">
		<div class="card-block">
			<div class="card-title" id="ichartTitle">
			</div>
			<div class="card-text" id="ichartContainer">
			</div>
		</div>
	</div>
</div>
<script type="text/javascript" src="js/index.js"></script>
<link rel="stylesheet" href="css/style.css">
</html>