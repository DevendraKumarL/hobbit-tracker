<!DOCTYPE html>
<html>
<head>

	<title>𒊯 Hobbit Tracker 𒊯</title>
	<link rel="icon" href="images/combo-chart-icon.png">

	<!-- load clarity icons lib -->
	<link rel="stylesheet" type="text/css" href="clricons/clr-icons.min.css">
	<script src="webcomponents/custom-elements.min.js"></script>
	<script src="clricons/clr-icons.min.js"></script>

	<!-- load clarity.js ui lib -->
	<link rel="stylesheet" type="text/css" href="clrui/clr-ui.min.css">

	<!-- load chart.js lib -->
	<script src="chartjs/Chart.js"></script>

	<!-- load chart.js plugin datalabels plugin -->
	<script src="chartjsplugin/chartjs-plugin-datalabels.min.js"></script>

	<link rel="stylesheet" href="css/style.css">
</head>
<body>
	<div class="main-container">
		<div class="alert alert-app-level"></div>
		<header class="header header-6">
			<div class="branding">
				<a href="/" class="nav-link">
					<span class="title">𒊯 <span>Hobbit</span> 𒊯</span>
				</a>
			</div>
			<div class="header-actions">
				<div class="header-nav select-month-section">
					<label>Sheet</label>
					<div class="clr-select-wrapper">
						<select id="selectMonth" class="clr-select" onchange="appIns.chooseMonth()">
						</select>
					</div>
				</div>
				<div class="header-nav">
					<a class="nav-link nav-text">
						<span id="timestamp"></span>
					</a>
				</div>
				<div class="header-nav">
					<a href="javascript://" aria-haspopup="true" class="tooltip tooltip-lg tooltip-left nav-link nav-text" onclick="forceFetch()" role="tooltip">
						<clr-icon shape="refresh"></clr-icon>
						<span class="tooltip-content">Force fetch data from GSheet</span>
					</a>
				</div>
			</div>
		</header>
		<div class="content-container">
			<div class="content-area">
				<div>
					<button id="grid" class="btn btn-link"
						aria-controls="gridPanel" aria-selected="true"
						type="button" onclick="appIns.switchTab('grid')">
						<clr-icon shape="grid-view"></clr-icon> Grid
					</button>
					<button id="barchart" class="btn btn-link"
						aria-controls="barChartPanel" aria-selected="false"
						type="button" onclick="appIns.switchTab('barchart')">
						<clr-icon shape="bar-chart"></clr-icon> Bar Chart
					</button>
					<button id="linechart" class="btn btn-link"
						aria-controls="lineChartPanel" aria-selected="false"
						type="button" onclick="appIns.switchTab('linechart')">
						<clr-icon shape="line-chart"></clr-icon> Line Chart
					</button>
					<button id="indiecharts" class="btn btn-link"
						aria-controls="indieChartsPanel" aria-selected="false"
						type="button" onclick="appIns.switchTab('indiecharts')">
						<clr-icon shape="view-columns"></clr-icon> Indie Charts
					</button>
				</div>
				<section id="gridPanel" role="tabpanel" aria-labelledby="grid">
					<div class="clr-col-12" id="datagridCard">
						<div class="card">
							<div class="card-block overflow-scroll">
								<div class="card-title">
									⥈ Hobbit Datagrid ⥈
								</div>
								<div class="card-text">
									<div id="mygrid"></div>
									<div id="legendgrid"></div>
								</div>
							</div>
						</div>
					</div>
				</section>
				<section id="barChartPanel" role="tabpanel" aria-labelledby="barchart" aria-hidden="true">
					<div class="clr-col-lg-12 clr-col-md-12 clr-col-sm-12">
						<div class="card">
							<div class="card-block overflow-scroll">
								<div class="card-title">
									⥉ Hobbit Data Bar Chart ⥉ &nbsp;&nbsp;&nbsp;
									<div class="clr-form-control" id="toggleContainer">
										<div class="clr-control-container">
										<div class="clr-toggle-wrapper">
											<input type="checkbox" id="toggleBarCharts" name="toggle-basic" value="option1" class="clr-toggle" onchange="appIns.toggleSwitchBarChart()">
											<label for="toggleBarCharts">Detailed</label>
										</div>
										</div>
									</div>
								</div>
								<div class="card-text chart-responsive" id="barchartsContainer">
								</div>
							</div>
						</div>
					</div>
				</section>
				<section id="lineChartPanel" role="tabpanel" aria-labelledby="linechart" aria-hidden="true">
					<div class="clr-col-lg-12 clr-col-md-12 clr-col-sm-12">
						<div class="card">
							<div class="card-block overflow-scroll">
								<div class="card-title">
									⏀ Hobbit Data Line Chart ⏀
								</div>
								<div class="card-text chart-responsive" id="lineChartContainer">
								</div>
							</div>
						</div>
					</div>
				</section>
				<section id="indieChartsPanel" role="tabpanel" aria-labelledby="indiecharts" aria-hidden="true">
				</section>
			</div>
		</div>
	</div>
</body>
<div id="ichartTemplateCard" class="clr-col-6">
	<div class="card">
		<div class="card-block overflow-scroll">
			<div class="card-title" id="ichartTitle">
			</div>
			<div class="card-text chart-responsive-indie" id="ichartContainer">
			</div>
		</div>
	</div>
</div>
<script type="text/javascript" src="js/index.js"></script>
</html>